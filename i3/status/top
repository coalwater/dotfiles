general {
  colors = true
  interval = 1
  separator = ' |-| '
}

order += "external_script vagrant"
order += 'keyboard_layout'
order += "battery_level"
order += 'backlight'
order += "external_script sink_name"
order += "volume master"
order += "tztime local"
order += "static_string name"

keyboard_layout {
  cache_timeout = 1
  on_click 1 = 'exec setxkbmap us'
  on_click 3 = 'exec setxkbmap ar'
}

backlight {
  button_down = 0
  button_up = 0
  cache_timeout = 1
  format = '{level}% '
  on_click 4 = 'exec --no-startup-id light -A 1'
  on_click 5 = 'exec --no-startup-id light -U 1'
}

volume master {
  format = "%volume "
  format_muted = "%volume "
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  on_click 1 = 'exec --no-startup-id gnome-control-center sound'
  on_click 4 = 'exec --no-startup-id ~/.config/i3/scripts/volume_up'
  on_click 5 = 'exec --no-startup-id ~/.config/i3/scripts/volume_down'
}


tztime local {
  format = "%a %d/%m/%Y %H:%M:%S"
  timezone "Europe/Amsterdam"
}

battery_level {
  blocks = ''
  cache_timeout = 5
  format = '{percent}% {time_remaining} {icon}'
  format_down = "No battery"
  charging_character = ""
  hide_seconds = true
  color_charging = '#66B2FF'
  color_good = '#00FF00'
  color_degraded = '#FFFF00'
  color_bad = '#FF0000'
  measurement_mode = 'acpi'
}

static_string name {
 format = "Mohammad AbuShady"
 color = '#3e73ef'
}

external_script sink_name {
 script_path = '~/.config/i3/scripts/active_sink_name'
}

external_script vagrant {
 script_path = '~/.config/i3/scripts/vagrant_status'
 format = '{output}'
 on_click 1 = 'exec --no-startup-id ~/.config/i3/scripts/toggle_vagrant'
 cache_timeout = 5
}
