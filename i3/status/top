general {
  colors = true
  interval = 2
}

order += "static_string background"
order += "external_script mousepad"
order += "github"
order += 'keyboard_layout'
order += "battery_level"
order += 'backlight'
order += "volume master"
order += "tztime local"
order += "static_string name"

keyboard_layout {
  on_click 1 = 'exec setxkbmap us'
  on_click 3 = 'exec setxkbmap ar'
}

backlight {
  button_down = 0
  button_up = 0
  cache_timeout = 1
  format = '{level}% '
  on_click 4 = 'exec --no-startup-id light -A 1'
  on_click 5 = 'exec --no-startup-id light -U 1'
}

volume master {
  format = "%volume "
  format_muted = "%volume 婢"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  on_click 4 = 'exec --no-startup-id ~/.config/i3/scripts/volume_up'
  on_click 5 = 'exec --no-startup-id ~/.config/i3/scripts/volume_down'
}


tztime local {
  format = "%a %d/%m/%Y %H:%M:%S"
  timezone "Europe/Amsterdam"
}

battery_level {
  blocks = ''
  cache_timeout = 5
  format = '{percent}% {time_remaining} {icon}'
  format_down = "No battery"
  charging_character = ""
  hide_seconds = true
  color_charging = '#66B2FF'
  color_good = '#00FF00'
  color_degraded = '#FFFF00'
  color_bad = '#FF0000'
  measurement_mode = 'acpi'
}

static_string name {
 format = "Mohammad AbuShady"
 color = '#3e73ef'
}

github {
  auth_token = 'xxxxxx'
  username = 'coalwater'
  format = ' {notifications_count}'
  repo = 'notifications'
  button_refresh = 1
  button_action = 3
}

external_script jira {
  cache_timeout = 60
  format = " {output}"
  script_path = "~/.config/i3/scripts/jira.sh"
  on_click 1 = 'exec --no-startup-id xdg-open https://jira.xxx.net/rest/api/latest/search?jql='
  on_click 3 = 'exec --no-startup-id xdg-open https://jira.xxx.net/secure/RapidBoard.jspa'
}

external_script mousepad {
  cache_timeout 60
  format = "{output}"
  script_path = "~/.config/i3/scripts/mousepad.sh"
}

static_string background {
  format = 'Change background'
  on_click 1 = 'exec --no-startup-id /home/mohammad/.config/i3/scripts/random_background.sh'
  on_click 3 = 'exec --no-startup-id cp /home/mohammad/Pictures/backgrounds/current.jpg "/home/mohammad/Pictures/backgrounds/$(date +"%Y-%m-%d %H:%M:%S.jpg")"'
}
