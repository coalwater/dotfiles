sysdata {
  cache_timeout = 1
  on_click 1 = 'exec gnome-system-monitor'
  format = "[\?color=cpu ï‹› {cpu_usage}%] î˜¡ [\?color=mem ðŸ–« {mem_used_percent}%]"
  thresholds = {
    'cpu': [
      (0, 'good'),
      (30, 'degraded'),
      (100, 'bad'),
    ],
    'mem': [
      (0, 'good'),
      (50, 'degraded'),
      (80, 'bad'),
    ],
  }
}

net_rate {
  cache_timeout = 1
  unit = 'kB/s'
  format = "[\?color=up ïƒ® {up}] î˜¡ [\?color=down ïƒ­{down}]"
  format_value = "[\?min_length=9 {value:.0f}{unit}]"
  thresholds = {
    'up': [
      (0, 'good'),
      (10240, 'degraded'),
      (102400, 'bad'),
    ],
    'down': [
      (0, 'good'),
      (51200, 'degraded'),
      (512000, 'bad'),
    ],
  }
}

