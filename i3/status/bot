general {
  colors = true
  interval = 2
}

order += "external_script sink_name"
order += "external_script vagrant"
order += 'weather_yahoo'
order += "pomodoro"
order += "sysdata"
order += "group disks"
order += "net_rate"
order += "online_status"
order += "ethernet eth0"
order += "wifi"

wifi {
  cache_timeout = 10
  format = '{ip} {ssid} Ôá´'
}

group disks {
  cycle = 10
  click_mode = "button"
  format = "{output} {button}"

  diskdata "/" {
    disk = "nvme0n1p7"
    format = 'ÔÇ† /home {used_percent}% ({total})'
  }

  diskdata "/home" {
    disk = "nvme0n1p5"
    format = 'ÔÇ† / {used_percent}% ({total})'
  }
}

online_status {
  cache_timeout = 1
  url = 'http://google.com'
  format = '{icon}'
  icon_on = 'ÔÄå'
  icon_off = 'ÔÄç'

}

ethernet eth0 {
# if you use %speed, i3status requires the cap_net_admin capability
  format_up = "E: %ip (%speed)"
    format_down = ""
}

sysdata {
  cache_timeout = 1
  on_click 1 = 'exec gnome-system-monitor'
  format = "[\?color=cpu Ôãõ {cpu_usage}%]   [\?color=mem üñ´ {mem_used_percent}%]"
  thresholds = {
    'cpu': [
      (0, 'good'),
      (30, 'degraded'),
      (100, 'bad'),
    ],
    'mem': [
      (0, 'good'),
      (50, 'degraded'),
      (80, 'bad'),
    ],
  }
}

net_rate {
  cache_timeout = 1
  unit = 'kB/s'
  format = "[\?color=up ÔÉÆ{up}]   [\?color=down ÔÉ≠{down}]"
  thresholds = {
    'up': [
      (0, 'good'),
      (10240, 'degraded'),
      (102400, 'bad'),
    ],
    'down': [
      (0, 'good'),
      (51200, 'degraded'),
      (512000, 'bad'),
    ],
  }
}

weather_yahoo {
  woeid = '727232'
  forecast_days = 0
  format_today = "{icon} {temp}¬∞ {text}"
  cache_timeout = 900
}

pomodoro {
  max_breaks = 3
  format = '{mmss}'
  format_separator = ':'
  timer_pomodoro = 3000
}

external_script vagrant {
 script_path = '~/.config/i3/scripts/vagrant_status'
 format = '{output}'
 # on_click 1 = 'exec --no-startup-id py3-cmd refresh vagrant'
 on_click 1 = "exec --no-startup-id 'cd /home/mohammad/projects/ansible-devops && vagrant halt"
 on_click 3 = "exec --no-startup-id 'cd /home/mohammad/projects/ansible-devops && vagrant up"
 cache_timeout = 900
}

external_script sink_name {
 script_path = '~/.config/i3/scripts/active_sink_name'
}
