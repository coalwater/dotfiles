# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode

# Pressing left will shrink the window’s width.
# Pressing right will grow the window’s width.
# Pressing up will shrink the window’s height.
# Pressing down will grow the window’s height.
  bindsym $left       resize shrink width 10 px or 10 ppt
    bindsym $down       resize grow height 10 px or 10 ppt
    bindsym $up         resize shrink height 10 px or 10 ppt
    bindsym $right      resize grow width 10 px or 10 ppt

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    id bar-top
    output $main_output
    status_command py3status -c ~/.config/i3/status/top
    tray_output primary
    position top
    font pango:FontAwesome, pango:Fantasque Sans Mono
    separator_symbol "    "
}

bar {
    id bar-top-extra
    output $extra_output
    tray_output primary
    position top
    font pango:FontAwesome, pango:Fantasque Sans Mono
}

bar {
    id bar-bot
    output $main_output
    status_command py3status -c ~/.config/i3/status/bot
    tray_output none
    position bottom
    workspace_buttons no
    font pango:FontAwesome, pango:Fantasque Sans Mono
    separator_symbol "    "
}

# Auto assign
assign [class="^Vivaldi" window_role="app"] $work2
assign [class="Thunderbird"] $work6
assign [class="Slack"] $work7
assign [class="Caprine"] $work7
assign [class="Meld"] $work1

# spotify doesn't have class when or instance when it's launched
# use for_window for assigning after the properties are changed.
assign [instance="spotify"] $work8
for_window [class="Spotify"] move to workspace $work8

